<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="opennet_pricing_template" name="Open-net pricing">
		<t t-call="website.layout">
			<div class="container">
				<div class="col-md-9">
					<div class="page-header">
					  	<h1>Open-Net <small>pricing</small></h1>
					</div>
					<div class="col-md-9 col-xs-12">
						<div class="row">
							<t t-foreach="areas" t-as="area">
								<div class="col-md-6">
									<div class="row">
										<div class="col-md-2">
											<div t-field="area.logo" t-options="{'widget': 'image'}" />
										</div>
										<div class="col-md-4">
											<h4 t-field="area.name"></h4>
											<span t-field="area.price" />
										</div>
									</div>
								</div>
							</t>
						</div>
					</div>
				</div>
				<div class="col-md-3 col-xs-12">

				</div>
			</div>
		</t>
	</template>

</odoo>
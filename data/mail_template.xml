<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_opennet_info_cron" model="mail.template">
            <field name="name">Info Cron - Send by Email (Open Net)</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">Rappel</field>
            <field name="partner_to">${object.ons_cust_person_in_charge.id}</field>
            <field name="model_id" ref="stock.move"/>
            <field name="auto_delete" eval="False"/> <!-- Should I ? -->
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="True"/>
            <field name="body_html">
<![CDATA[

<p>Monsieur/Madame,</p>

<p>RAPPEL</p>

<p>Article: ${object.product_id}</p>
<p>Description: ${object.name}</p>
<p>Partenaire: ${object.partner_id}</p>
<p>Date pr√©vue: ${object.date_expected}</p>

]]>    
            </field>
    </record>
</odoo>